<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.com.gant.pifarm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Login"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.Features" />
        <activity android:name=".activities.FacebookConnector" />
        <activity android:name=".activities.GoogleConnector" />
        <activity android:name=".activities.ForgotPass" />
        <activity android:name=".activities.Introduction" />
        <activity android:name=".activities.ReadCard" />
        <activity android:name=".activities.WriteCard" />
        <activity android:name=".activities.ManageSwine" />
        <activity android:name=".activities.Vaccines" />
        <activity android:name=".activities.Statictis" />
        <activity android:name=".activities.Forum" />
        <activity android:name=".activities.ManageStaffs" />
        <activity android:name=".activities.SyncData"/>
    </application>

</manifest>
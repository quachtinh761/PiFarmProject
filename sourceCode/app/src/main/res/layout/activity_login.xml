<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/loginBackground"
    tools:context="vn.com.gant.pifarm.Login">

    <View
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_marginBottom="11dp"
        android:id="@+id/Line"
        android:layout_above="@+id/txvForgotPass"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/forgotPassword"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/txvForgotPass"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/ibtnFacebook"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="@string/textDerector"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvConnectDirector"
        android:layout_alignBaseline="@+id/txvForgotPass"
        android:layout_alignBottom="@+id/txvForgotPass"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google_icon"
        android:id="@+id/ibtnGoogle"
        android:background="@color/loginBackground"
        android:layout_marginStart="19dp"
        android:layout_alignTop="@+id/ibtnFacebook"
        android:layout_alignStart="@+id/txvConnectDirector" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook_icon"
        android:background="@drawable/facebook_icon"
        android:layout_marginBottom="26dp"
        android:id="@+id/ibtnFacebook"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_marginStart="37dp" />

    <Button
        android:text="@string/login_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_above="@+id/Line"
        android:layout_alignStart="@+id/edtPassword" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text|textPassword"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:textColor="@color/black"
        android:id="@+id/edtPassword"
        android:hint="@string/password"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/edtMail" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="@color/black"
        android:id="@+id/edtMail"
        android:focusableInTouchMode="true"
        android:hint="@string/exampleEmail"
        android:layout_above="@+id/edtPassword"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

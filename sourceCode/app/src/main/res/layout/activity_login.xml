<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/loginBackground"
    tools:context="vn.com.gant.pifarm.Login">

    <View
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/Line"
        android:layout_alignTop="@+id/txvForgotPass"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/txtPassword"
        android:layout_above="@+id/edtPassword"
        android:layout_alignStart="@+id/edtPassword" />

    <TextView
        android:text="@string/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/txtEmail"
        android:layout_above="@+id/edtMail"
        android:layout_alignStart="@+id/edtMail" />

    <TextView
        android:text="@string/forgotPassword"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/txvForgotPass"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="9dp"
        android:layout_above="@+id/ibtnFacebook"
        android:layout_alignEnd="@+id/imgLogo" />

    <TextView
        android:text="@string/textDerector"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvConnectDirector"
        android:layout_alignBaseline="@+id/txvForgotPass"
        android:layout_alignBottom="@+id/txvForgotPass"
        android:layout_toEndOf="@+id/imgLogo" />

    <Button
        android:text="@string/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/Line"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@drawable/edit_text"
        android:textColor="@color/black"
        android:id="@+id/edtMail"
        android:layout_marginTop="5dp"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:hint="@string/exampleEmail" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/facebook_icon"
        android:layout_marginBottom="37dp"
        android:id="@+id/ibtnFacebook"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnLogin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/google_icon"
        android:id="@+id/ibtnGoogle"
        android:layout_below="@+id/txvForgotPass"
        android:layout_toEndOf="@+id/btnLogin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imgLogo"
        android:background="@drawable/image_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="text|textPassword"
        android:ems="10"
        android:background="@drawable/edit_text"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:id="@+id/edtPassword"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/btnLogin"
        android:layout_alignStart="@+id/edtMail"
        android:hint="@string/password" />
</RelativeLayout>
